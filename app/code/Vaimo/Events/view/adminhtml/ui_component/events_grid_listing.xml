<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">events_grid_listing.events_grid_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/edit"/>
                <class>primary</class>
                <label translate="true">Add New Event</label>
            </button>
        </buttons>
        <spinner>events_grid_listing</spinner>
        <deps>
            <dep>events_grid_listing.events_grid_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="events_grid_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">vaimo_events_event_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Cms\Ui\Component\DataProvider" name="events_grid_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>vaimo_events_event_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <argument name="data" xsi:type="array">
                <item name="observers" xsi:type="array">
                    <item name="column" xsi:type="string">column</item>
                </item>
            </argument>
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="events_grid_listing">
        <selectionsColumn name="ids">
            <settings>
                <indexField>vaimo_events_event_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>55</resizeDefaultWidth>
            </settings>
        </selectionsColumn>
        <column name="vaimo_events_event_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="title">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Title</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="description">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Description</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="event_time">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Event time</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="image">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Event image</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <!--<column name="image" class="Atharva\FormGrid\Ui\Component\Listing\Column\Image">-->
